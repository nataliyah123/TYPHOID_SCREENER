<SecondPage>:
    name: "second_page"    

        # Show login page #2
    MDCard:    
        size_hint: None, None
        size: 300, 450
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 65
        spacing: 25
        orientation: 'vertical'
        
        MDTextFieldRound:
            id: user
            icon_left: "account-check"
            hint_text: "Name"
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 220
            font_size: 20
            pos_hint: {"center_x": 0.5}
        MDTextFieldRound:
            id: password
            icon_left: "key-variant"
            hint_text: "Password"
            foreground_color: 1, 0, 1, 1
            size_hint_x: None
            width: 220
            font_size: 20            
            pos_hint: {"center_x": 0.5}
            password: True
        MDRectangleFlatButton:
            text: "LOG IN"
            font_size: 15
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            pos_hint: {"center_x": 0.5}
            on_press: app.Login()
        MDRectangleFlatButton:
            text: "SIGN UP"
            font_size: 15
            theme_text_color: "Custom"
            text_color: 0, 0, 1, 1
            pos_hint: {"center_x": 0.5}
            on_press: root.manager.current = "third_page"

            
        

