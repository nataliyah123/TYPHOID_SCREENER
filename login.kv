<FourthPage>:
    name: "fourth_page"    
        # Show patient symptoms form page #4        
    MDCard:    
        size_hint: None, None
        size: 300, 400
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 8
        padding: 15
        spacing: 10
        orientation: 'vertical'
        # below is kivy not kivy md except for the last buttons
        ScrollView:
            #size_hint_y: 1.93
            pos_hint: {'x':0, 'y': .11}
            do_scroll_x: False
            do_scroll_y: True

            GridLayout:
                size:(root.width, 800)
                size_hint_x: None
                size_hint_y: None
                cols: 1
                height: self.minimum_height
                row_default_height: 50
                row_force_default: True
                MDToolbar:
                    title: "Hi"
                    id:toolbar
                    elevation: 5
                    pos_hint: {'top':0.5}
                    md_bg_color: 200/255,10/255,30/255,1
                TextInput:
                    id: patient_name
                    icon_left: "account-check"
                    hint_text: "Patient Name"
                    foreground_color: 1, 0, 1, 1
                    size_hint_x: None
                    width: 220
                    adaptive_height: True
                    font_size: 20
                    pos_hint: {"center_x": 0.5}
                TextInput:
                    id: age
                    icon_left: "map-marker"
                    hint_text: "Age"
                    input_filter: 'int'
                    foreground_color: 1, 0, 1, 1
                    size_hint_x: None
                    width: 220
                    font_size: 20            
                    pos_hint: {"center_x": 0.5} 
                                   
                TextInput:
                    id: location
                    icon_left: "key-variant"
                    hint_text: "Location"
                    foreground_color: 1, 0, 1, 1
                    size_hint_x: None
                    width: 220
                    font_size: 20            
                    pos_hint: {"center_x": 0.5} 
                                                     
                Label:
                    id: fever
                    text: "Fever"
                    font_size: 20
                    halign: "center"
                    padding_y: 5 
                BoxLayout:
                    CheckBox:
                        id: fever_yes
                        group: "fever_radio"
                        text: "Yes"
                        active: True
                        pos_hint: {'center_x': .4, 'center_y': .5}
                    CheckBox:
                        id: fever_no
                        group: "fever_radio"
                        text: "No"
                        pos_hint: {'center_x': .6, 'center_y': .5}
                Label:
                    id: abd_pain
                    text: "Abdominal Pain"
                    font_size: 20
                    halign: "center"
                    padding_y: 5 
                BoxLayout:
                    CheckBox:
                        id: abd_pain_yes
                        group: "abd_pain_radio"
                        text: "Yes"
                        active: True
                        pos_hint: {'center_x': .4, 'center_y': .5}
                    CheckBox:
                        id: abd_pain_no
                        group: "abd_pain_radio"
                        text: "No"
                        pos_hint: {'center_x': .6, 'center_y': .5}
                
                Label:
                    id: cough
                    text: "Cough"
                    font_size: 20
                    halign: "center"
                    padding_y: 5 
                BoxLayout:
                    CheckBox:
                        id: cough_yes
                        group: "cough_radio"
                        text: "Yes"
                        active: True
                        pos_hint: {'center_x': .4, 'center_y': .5}
                    CheckBox:
                        id: cough_no
                        group: "cough_radio"
                        text: "No"
                        pos_hint: {'center_x': .6, 'center_y': .5}
                Label:
                    id: diarrheoa
                    text: "Diarrheoa"
                    font_size: 20
                    halign: "center"
                    padding_y: 5 
                BoxLayout:
                    CheckBox:
                        id: diar_pain_yes
                        group: "diar_pain_radio"
                        text: "Yes"
                        active: True
                        pos_hint: {'center_x': .4, 'center_y': .5}
                    CheckBox:
                        id: diar_pain_no
                        group: "diar_pain_radio"
                        text: "No"
                        pos_hint: {'center_x': .6, 'center_y': .5}
                        
                MDRectangleFlatButton:
                    text: "SUBMIT"
                    font_size: 15
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    pos_hint: {"center_x": 0.5}
                    on_press: app.Sign_Up()
                MDRectangleFlatButton:
                    text: "PREDICT"
                    font_size: 15
                    theme_text_color: "Custom"
                    text_color: 0, 0, 1, 1
                    pos_hint: {"center_x": 0.5}
                    #on_press: app.Sign_Up()                  

